{
    "env": {
        "node": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "ignorePatterns": [
        "/public",
        "webpack.*.js"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        // check node.js version against https://node.green/#ES2021
        "ecmaVersion": 2021,
        "sourceType": "module"
    },
    "rules": {
        "no-redeclare": "off",
        "no-prototype-builtins": "off",
        "no-unused-vars": [
            "error",
            {
                "vars": "all",
                "args": "none",
                "ignoreRestSiblings": false
            }
        ]
    }
}
