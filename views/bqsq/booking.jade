extends ../layout

block prepend css
  link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css', integrity='sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7', crossorigin='anonymous')

block content
  div#main.container(style='padding-left:7px;padding-right:7px')
    div.row(style='margin-left:-7px;margin-right:-7px')
      img.img-responsive.center-block(src='/img/logo.png')
    div.row(style='margin-left:-7px;margin-right:-7px')
      p= counter
      div#info.container(style={'margin':'7px'})
      div#user.container(style={'margin':'7px'})
    div.row(style='margin-top:7px;margin-left:-7px;margin-right:-7px')
      div.col-xs-1.pull-left(style='padding-left:9px')
        button#previous_week.btn.btn-default.pull-left.btn-xs 上一周
      div#currentWeekRange.col-xs-6.col-xs-offset-2(style={'text-align':'center','line-height':'22px','color':'#2b2b2b'})
      div.col-xs-1.pull-right(style='padding-right:9px')
        button#next_week.btn.btn-default.pull-right.btn-xs 下一周
    //div(style='border:medium double rgb(250,0,255)')
    div.row.class-row
      div.col-xs-2.date-col
        p 2月12日 周二
      div.col-xs-10.content-col
        div
          div.cls-col
            p 嘉嘉老师的英语故事会嘉嘉老师的英语故事会
            p.cls-tip 10:30开始
              span.cls-story 故事会
          div.book-col
            button.btn.btn-primary.btn-md.book-btn 预订
            button.btn.btn-primary.btn-md.remain-btn(disabled='disabled') 剩余
              span.badge.remain-span 4
        div
          div(style='float:left;width:80%')
            p 嘉嘉老师的英语故事会嘉嘉老师的英语故事会
            p(style='color:#808080;font-size:12px') 16:30开始
              span.cls-event 主题活动
          div(style='float:right;width:20%;max-width:60px')
            button.btn.btn-danger.btn-md(style='float:right;margin-top:3px;padding-bottom:3px;border-bottom-left-radius:0px;border-bottom-right-radius:0px') 已满
            button.btn.btn-danger.btn-md.remain-btn(disabled='disabled') 剩余
              span.badge(style='padding:2px;margin-left:1px;color:#f0ad4e') 0

  script(src='https://code.jquery.com/jquery-1.12.3.min.js', integrity='sha256-aaODHAgvwQW1bFOGXMeX+pC4PZIPsvn2h1sArYOhgXQ=', crossorigin='anonymous')
