  script(src='/js/course.js')

block page
  div.container(style='padding-top:58px')
    div#toolbar.btn-group(role='group')
      button.btn.btn-success(type='button') 创建
    table#course_table(data-show-refresh='true',data-checkbox-header='false',data-pagination='true',data-page-size='15',data-page-list='[10,15,20,50,All]',data-search='true',data-striped='true',data-url='/api/courses',data-toolbar='#toolbar',data-unique-id="_id")
      thead
        tr
          //th(data-field='_id',data-visible='false') ID
          th(data-field='name',data-sortable='true') 班级名称
          th(data-field='createDate',data-sortable='true') 创建时间
          th(data-field='status',data-sortable='true') 状态
          th(data-field='members',data-sortable='true') 人数
          th(data-width='180px',data-align='center') 操作