    script(src=CDN_FILES.vue_runtime_dev)
    script(src=CDN_FILES.vue_router_dev)
    script(src=CDN_FILES.vuetify_dev)
    script(src=CDN_FILES.momentjs_dev)
  else
    script(src=CDN_FILES.axios)
    script(src=CDN_FILES.i18next)
    script(src=CDN_FILES.vue_runtime)
    script(src=CDN_FILES.vue_router)
    script(src=CDN_FILES.vuetify)
    script(src=CDN_FILES.momentjs)
