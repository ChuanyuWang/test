{
    "root": true,
    "env": {
        "browser": true,
        "commonjs": true,
        "jquery": true,
        "es6": true
    },
    "extends": [
        "plugin:compat/recommended",
        "plugin:vue/recommended"
    ],
    "globals": {
        "moment": "readonly",
        "Vue": "readonly",
        "$": "readonly",
        "i18next": "readonly"
    },
    "parserOptions": {
        // async/await supported since 2017
        "ecmaVersion": 2015, // same as 6
        "sourceType": "script"
    },
    "plugins": [
        "vue", // means eslint-plugin-vue
        "compat"
    ],
    "rules": {
        "no-unused-vars": [
            "error",
            {
                "vars": "all",
                "args": "none",
                "ignoreRestSiblings": false
            }
        ]
    }
}
